{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",

    "noUnusedLocals": false,
    "noUnusedParameters": false,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    "incremental": false,
    "noEmitOnError": false, // Ensure this is false to emit even with errors
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["vite.config.ts"]
}
